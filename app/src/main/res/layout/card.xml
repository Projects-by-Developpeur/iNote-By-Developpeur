<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/note1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView

                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="15dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/noteMenu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/notemenu"
                />

            <TextView
                android:layout_toStartOf="@id/noteMenu"
                android:id="@+id/noteTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Note Title"
                android:textColor="#2E3A59"
                android:fontFamily="@font/nunitobold"
                android:textSize="24sp"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"/>

            <Button
                android:layout_below="@+id/noteContent"
                android:layout_alignParentEnd="true"
                android:id="@+id/noteKind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Important"
                android:textColor="#FBFCFC"
                android:backgroundTint="#58D68D"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/nunitobold"
                android:gravity="center"
                android:clickable="false"
                android:layout_centerHorizontal="true"
                />
            <ImageView
                android:visibility="invisible"
                android:layout_toStartOf="@+id/noteKind"
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                 android:layout_centerHorizontal="true"
                android:layout_marginEnd="8dp"
                android:layout_below="@+id/noteTitle"
                android:layout_alignTop="@id/noteKind"
                 android:id="@+id/noteLike"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/heart_pressed"
                />
            <TextView
                android:layout_below="@+id/noteDate"
                android:id="@+id/noteContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Content Content Content Content Content Content Content Content Content Content "
                android:textColor="#2E3A59"
                android:fontFamily="@font/nunitoregular"
                android:textSize="15sp"
                android:padding="12dp"
                android:maxLines="2"
                android:ellipsize="end"/>
            <TextView
                android:layout_alignParentStart="true"
                android:layout_below="@+id/noteTitle"
                android:id="@+id/noteDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21/06/2024"
                android:textColor="#2E3A59"
                android:fontFamily="@font/nunitoregular"
                android:textSize="12sp"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:paddingBottom="12dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>